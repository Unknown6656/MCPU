<Window x:Class="MCPU.IDE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	    xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        xmlns:fctb="clr-namespace:FastColoredTextBoxNS;assembly=FastColoredTextBox"
        xmlns:local="clr-namespace:MCPU.IDE"
        mc:Ignorable="d"
        Height="500" Width="750"
        Title="MCPU Integrated Development Environment"
        Loaded="Window_Loaded">
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom" Height="23">
        </StatusBar>
        <MenuItem DockPanel.Dock="Top" Height="23">
        </MenuItem>
        <WindowsFormsHost>
            <WindowsFormsHost.Child>
                <local:HighlightnerForm x:Name="fctb_host"/>
                <!--<fctb:FastColoredTextBox x:Name="tb_main"/>-->
            </WindowsFormsHost.Child>
        </WindowsFormsHost>
    </DockPanel>
</Window>
