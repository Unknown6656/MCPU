<#	
	void print(string msg)
	{
		foreach (string l in msg.Split('\n'))
		{
			string ll = l.Trim();

			WriteLine(ll.Length > 0 ? $"echo \"{ll}\"" : "write-host \"`n\"");
		}
	}
